{
	"compilerOptions": {
		"composite": true,
		"skipLibCheck": true,
		"module": "ESNext",
		"moduleResolution": "bundler",
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"paths": {
			// @name_of_alias: [real_path_of_directory]
			"@src/*": ["./src/*"],
			"@screens/*": ["./src/screens/*"],
			"@components/*": ["./src/components/*"],
			"@hooks/*": ["./src/hooks/*"]
		}
	},
	"include": ["vite.config.ts"]
}
